<script>
// Optional: Handle form submission via AJAX so the page doesn't reload
document.getElementById("orderForm").addEventListener("submit", function(e) {
  e.preventDefault();
  var form = e.target;
  var formData = new FormData(form);
  
  fetch(form.action, {
    method: "POST",
    body: formData
  })
  .then(response => response.text())
  .then(data => {
    document.getElementById("orderResponse").innerText = "Thank you for your order!";
    form.reset();
  })
  .catch(error => {
    document.getElementById("orderResponse").innerText = "There was an error submitting your order. Please try again.";
    console.error("Error:", error);
  });
});
</script>

